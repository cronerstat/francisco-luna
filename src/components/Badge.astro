---
interface Props {
  text: string;
  variant?: "primary" | "secondary" | "outline";
}

const { text, variant = "primary" } = Astro.props;

const variants = {
  primary: "bg-indigo-500/10 text-indigo-300 border-indigo-500/20",
  secondary: "bg-emerald-500/10 text-emerald-300 border-emerald-500/20",
  outline: "bg-transparent text-gray-400 border-gray-700",
};
---

<span class={`px-3 py-1 rounded-full text-sm font-medium border ${variants[variant]} transition-colors duration-200`}>
  {text}
</span>
