---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import Section from '../components/Section.astro';
import Card from '../components/Card.astro';
import Badge from '../components/Badge.astro';
import { Download, Mail, ChevronRight, Briefcase, GraduationCap } from 'lucide-react';
import { Image } from 'astro:assets';
import profileImage from '../assets/calpa-wall-street.png';

const experience = [
  {
    role: "Service Desk L1",
    company: "Dyopath",
    period: "Jan 2024 - Current",
    description: "Providing L1 support with focus on QA, CSAT, and Incident Management.",
    tags: ["Active Directory", "ServiceNow", "Troubleshooting", "SLA"]
  },
  {
    role: "Help Desk Agent",
    company: "NTT Data",
    period: "July 2023 - Dec 2023",
    description: "SysAdmin tasks handling HIPAA and PHI compliance requirements.",
    tags: ["Active Directory", "ServiceNow", "SysAdmin", "HIPAA"]
  },
  {
    role: "Tech Support Agent",
    company: "Seagate Technology",
    period: "Jan 2021 - July 2023",
    description: "Expert troubleshooting and customer interaction management.",
    tags: ["Salesforce CRM", "CSAT", "NPS", "RTA"]
  },
  {
    role: "Head of Administrative Office",
    company: "Walmart de Mexico",
    period: "Jan 2018 - Jan 2020",
    description: "Managed office administration, personnel, and policy issuance.",
    tags: ["Administration", "Management", "Policies"]
  }
];

const education = [
  {
    degree: "Bachelor's Degree in Human Resources",
    school: "Universidad Enrique Rebsamen",
    period: "Aug 2018 - Dec 2021"
  },
  {
    degree: "Computer and Electronics Technician",
    school: "Escuela Tecnologica de Occidente",
    period: "Jan 2018 - Dec 2020"
  },
  {
    degree: "IT Technician",
    school: "Colegio de bachilleres del estado de Jalisco 12",
    period: "Jan 2015 - Dec 2018"
  }
];

const skills = {
  technical: ["Active Directory", "ServiceNow", "Salesforce CRM", "Troubleshooting", "Hardware Support", "Network Basics"],
  soft: ["Team Management", "Problem Solving", "Customer Service", "Communication", "Leadership"],
  languages: ["Spanish (Native)", "English (Professional)"]
};

// Placeholder projects to demonstrate functionality since none were listed in CV
const projects = [
  {
    title: "IT Support Dashboard",
    description: "A conceptual dashboard for tracking ticket volume, SLA compliance, and agent performance metrics in real-time.",
    tags: ["React", "Tailwind CSS", "Recharts"],
    link: "#",
    github: "#"
  },
  {
    title: "Knowledge Base Portal",
    description: "Internal documentation hub for rapid troubleshooting and standard operating procedures.",
    tags: ["Astro", "Markdown", "Search"],
    link: "#",
    github: "#"
  },
  {
    title: "Automated Onboarding Script",
    description: "PowerShell script suite to automate new user account creation across Active Directory and M365.",
    tags: ["PowerShell", "Active Directory", "Automation"],
    link: "#",
    github: "#"
  }
];
---

<Layout title="Francisco Javier Nuñez Luna | Portfolio">
  <Header />

  <main class="flex-grow pt-16">
    <!-- Hero Section -->
    <Section className="min-h-[80vh] flex flex-col-reverse lg:flex-row items-center gap-12 justify-between">
      <div class="space-y-6 lg:w-1/2">
        <Badge text="Open to Work" variant="secondary" />
        <h1 class="text-5xl md:text-7xl font-bold bg-clip-text text-transparent bg-gradient-to-br from-white via-gray-200 to-gray-500 pb-2">
          Francisco Javier<br/>Nuñez Luna
        </h1>
        <h2 class="text-2xl md:text-3xl text-gray-400 font-light">
          IT & Customer Service Specialist
        </h2>
        <p class="text-xl text-gray-400 max-w-2xl leading-relaxed">
          Experienced IT professional with a strong background in Service Desk, Help Desk, and Technical Support. 
          Proven track record in troubleshooting, QA, and team management across global organizations.
        </p>
        
        <div class="flex flex-wrap gap-4 pt-4">
          <a href="/CV.pdf" download class="flex items-center gap-2 px-6 py-3 bg-indigo-600 hover:bg-indigo-700 text-white rounded-full font-medium transition-all hover:scale-105">
            <Download className="w-5 h-5" />
            Download CV
          </a>
          <a href="#contact" class="flex items-center gap-2 px-6 py-3 border border-gray-700 hover:border-white text-gray-300 hover:text-white rounded-full font-medium transition-all hover:scale-105">
            <Mail className="w-5 h-5" />
            Contact Me
          </a>
        </div>
      </div>

      <div class="lg:w-1/2 flex justify-center lg:justify-end">
        <div class="relative group">
          <div class="absolute inset-0 bg-gradient-to-tr from-indigo-500/20 to-purple-500/20 rounded-3xl blur-2xl -z-10"></div>
          <Image 
            src={profileImage} 
            alt="Francisco Javier Nuñez Luna" 
            class="w-64 md:w-80 lg:w-[400px] h-auto rounded-3xl shadow-2xl border border-gray-700/50 rotate-3 hover:rotate-0 transition-transform duration-500"
          />
        </div>
      </div>
    </Section>

    <!-- Experience Section -->
    <Section id="experience" className="space-y-12">
      <div class="flex items-center gap-4 mb-8">
        <Briefcase className="w-8 h-8 text-indigo-400" />
        <h2 class="text-3xl font-bold text-white">Professional Experience</h2>
      </div>

      <div class="relative border-l border-gray-800 ml-3 space-y-12 pl-8">
        {experience.map((job) => (
          <div class="relative">
            <div class="absolute -left-[41px] w-5 h-5 rounded-full bg-gray-900 border-2 border-indigo-500"></div>
            <div class="space-y-2">
              <span class="text-sm text-indigo-400 font-mono bg-indigo-500/10 px-2 py-1 rounded">{job.period}</span>
              <h3 class="text-xl font-bold text-white mt-2">{job.role}</h3>
              <p class="text-lg text-gray-400">{job.company}</p>
              <p class="text-gray-400 leading-relaxed">{job.description}</p>
              <div class="flex flex-wrap gap-2 mt-3">
                {job.tags.map(tag => (
                  <Badge text={tag} variant="outline" />
                ))}
              </div>
            </div>
          </div>
        ))}
      </div>
    </Section>

    <!-- Projects Section (Bento Grid) -->
    <Section id="projects" className="space-y-12">
      <h2 class="text-3xl font-bold text-white mb-8">Featured Projects</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projects.map((project, index) => (
          <div class={`${index === 0 ? 'md:col-span-2' : ''}`}>
            <Card {...project} />
          </div>
        ))}
      </div>
    </Section>

    <!-- Education & Skills -->
    <Section id="skills" className="grid md:grid-cols-2 gap-12">
      <div>
        <div class="flex items-center gap-4 mb-8">
          <GraduationCap className="w-8 h-8 text-emerald-400" />
          <h2 class="text-3xl font-bold text-white">Education</h2>
        </div>
        <div class="space-y-8">
          {education.map((edu) => (
            <div class="bg-gray-800/30 p-6 rounded-xl border border-gray-800">
              <h3 class="text-lg font-bold text-white">{edu.degree}</h3>
              <p class="text-gray-400">{edu.school}</p>
              <span class="text-sm text-emerald-400/80 font-mono">{edu.period}</span>
            </div>
          ))}
        </div>
      </div>

      <div>
        <h2 class="text-3xl font-bold text-white mb-8">Technical Skills</h2>
        <div class="space-y-6">
          <div>
            <h3 class="text-lg text-gray-300 mb-3">Core Competencies</h3>
            <div class="flex flex-wrap gap-2">
              {skills.technical.map(skill => (
                <Badge text={skill} variant="primary" />
              ))}
            </div>
          </div>
          <div>
            <h3 class="text-lg text-gray-300 mb-3">Soft Skills</h3>
            <div class="flex flex-wrap gap-2">
              {skills.soft.map(skill => (
                <Badge text={skill} variant="secondary" />
              ))}
            </div>
          </div>
        </div>
      </div>
    </Section>

    <!-- Contact Section -->
    <Section id="contact" className="text-center space-y-8 py-24">
      <h2 class="text-4xl font-bold text-white">Let's Work Together</h2>
      <p class="text-xl text-gray-400 max-w-2xl mx-auto">
        Currently available for new opportunities. Feel free to reach out using the contact links below.
      </p>
      <div class="flex justify-center gap-4">
        <a href="mailto:jyd.demi@gmail.com" class="px-8 py-4 bg-white text-gray-900 rounded-full font-bold hover:bg-gray-200 transition-colors">
          Get in Touch
        </a>
      </div>
    </Section>
  </main>

  <Footer />
</Layout>
